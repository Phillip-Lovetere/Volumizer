            android:name=".newUser"
            android:label="@string/new_user" />
        <activity
            android:name=".newDevice"
            android:label="@string/new_device" />
        <activity
            android:name=".switchUser"
            android:label="@string/switch_user" />
        <activity
            android:name=".switchDevice"
            android:label="@string/switch_device" />
        <activity android:name=".BackupRestore" />
        <activity android:name=".SetChangeDeletePassword" />
        <activity android:name=".AdvancedSettings" />
        <activity android:name=".PasswordRequest" />
        <activity android:name=".ChangeUsername" />
        <activity android:name=".ChangeDeviceName" />

        <service
            android:name=".VolumeTweakerRunner"
            android:exported="false" />

        <activity android:name=".MusicLocationSetter" />
        <activity android:name=".About_Screen" />
        <activity android:name=".LegalInformation" />
