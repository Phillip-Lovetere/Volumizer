                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".helpMenu"
            android:label="@string/help" />
        <activity
            android:name=".Settings"
            android:label="@string/settings" />
